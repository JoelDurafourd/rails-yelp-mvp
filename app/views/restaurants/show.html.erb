<h1>name: <%= @restaurant.name %></h1>
<h2>address: <%= @restaurant.address %></h2>
<h2>category: <%= @restaurant.category %></h2>
<h2>phone number: <%= @restaurant.phone_number %></h2>

<%= link_to "Back to Restaurants", "/restaurants", class: "btn btn-primary"%>
<%= link_to "edit", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "DESTROY THIS RESTAURANT", restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>review: <%= review.content %> rating: <%= review.rating %></li>
  <%= link_to "Delete", review_path(review), data: {turbo_method: :delete}, class: "btn btn-danger" %>
  <% end %>
</ul>

<h3>Write a review</h3>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
